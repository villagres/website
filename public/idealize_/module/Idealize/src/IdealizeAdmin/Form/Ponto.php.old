<?php
	namespace IdealizeAdmin\Form;

	use Zend\Form\Form,
		Zend\Form\Element\Select;


	class Ponto extends Form{

		protected $pessoas;

		public function __construct($name=null, array $pessoas = null){
			parent::__construct('frmPontos');
			$this->pessoas = $pessoas;
			$this->setAttribute('method','post');
			$this->setAttribute('enctype','multipart/form-data');
			$this->add(array(
				'name' => 'id',
				'attributes' => array(
					'type' => 'hidden'
				)
			));
			$this->add(array(
				'name' => 'ponto',
				'options' => array(
					'type' => 'text',					
				),
				'attributes' => array(
					'id' => 'ponto',
					'placeholder' => 'Entre com o nÃºmero de pontos'
				)
			));
			$formatos = new Select();
			$formatos->setName("formato")
					 ->setValueOptions(array(
					 	'60x60' => '60x60',
					 	'50x100' => '50x100',
					 	'24,5x100' => '24,5x100',
					 	'71x71' => '71x71',
					 	'25x25(Santa)' => '25x25(Santa)'
					 ));
			$this->add($formatos);

			$pessoa = new Select();
			$pessoa->setName("pessoa")
				   ->setOptions(array('value_options'=>$this->pessoas)
				   	);
			$this->add($pessoa);

			$this->add(array(
				'name' => 'dataponto',
				'options' => array(
					'type' => 'text',					
				),
				'attributes' => array(
					'id' => 'dataponto',					
				)
			));

			$this->add(array(
				'name' => 'submit',
				'type' => 'Zend\Form\Element\Submit',
				'attributes' => array(
					'value' => 'Salvar',					
				)
			));
		}
	}